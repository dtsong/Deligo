<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if user.id != current_user.id %>
        <tr>
          <td><%= gravatar_for user %></td>
          <td><%= link_to user.name,  user_path(user) %></td>
          <% if  @friendship_user2_ids.include?(user.id) %>
            <td> <%= link_to "View their questions", questions_path({:target_id => user.id, :current_id => current_user.id}), class: "btn btn-sm btn-primary" %> </td>
          <% else %>
            <td><%= link_to "Add Friend", new_friendship_path({:target_id => user.id, :current_id => current_user.id}), class: "btn btn-sm btn-primary" %> </td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
