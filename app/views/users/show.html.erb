<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <aside class="col-md-4">
	  <br></br>
    <!-- my quesions -->
    <!-- create new questions -->
    <% if current_user.id == @user.id %>
	<%= link_to "Post a Question", new_question_path, class: "btn btn-lg btn-primary" %>
      <%= link_to "My Questions", questions_path({:target_id => current_user.id, :current_id => current_user.id}), class: "btn btn-lg btn-primary" %><br></br>
    <% else %>
      <% if @friendship %>

        <%= link_to "View their questions", questions_path({:target_id => @user.id, :current_id => current_user.id}), class: "btn btn-lg btn-success" %>
      <% else %>
        <%= link_to "Add Friend", new_friendship_path({:target_id => @user.id, :current_id => current_user.id}), class: "btn btn-lg btn-primary" %>
      <% end %>
    <% end %>
	<br></br>
	<div class="left">
	<p>Questions Asked: <%= @asked.length %><p>
	<p>Questions Answered: <%= @answered.length %><p>
		<% if current_user.id == @user.id %>
		 <%= link_to "My Groups", groups_path, class: "btn btn-lg btn-primary" %>
		 <% end %>
	</div>
  </aside>
</div>
<div class="col-md-3">
<% if current_user.id == @user.id %>
<%= link_to 'Edit', edit_user_path(@user), class: "btn btn-default" %> |
<%end%>
<%= link_to 'Back', users_path, class: "btn btn-default" %>
</div>
