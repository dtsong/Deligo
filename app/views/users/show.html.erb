<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <aside class="col-md-4">
    <!-- my quesions -->
    <!-- create new questions -->
    <% if current_user.id == @user.id %>
      <%= link_to "Post a Question", new_question_path, class: "btn btn-lg btn-primary" %>
      <%= link_to "My Questions", questions_path, class: "btn btn-lg btn-primary" %>
    <% else %>
      <% if @friendship %>

        <%= link_to "View his questions", questions_path({:target_id => @user.id, :current_id => current_user.id}), class: "btn btn-lg btn-primary" %>
      <% else %>
        <%= link_to "Add Friend", new_friendship_path({:target_id => @user.id, :current_id => current_user.id}), class: "btn btn-lg btn-primary" %>
      <% end %>
    <% end %>
  </aside>
</div>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
