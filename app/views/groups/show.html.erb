<p id="notice"><%= notice %></p>

<div class="left">
<p>
  <strong>Name:</strong>
  <%= @group.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @group.description %>
</p>

<strong>Members:</strong>
<table>
  <thead>
  </thead>
  <tbody>
    <% @group.members.each do |member| %>
	<tr>
	<td><%= link_to member.user.name,  user_path(member.user) %></td>
</tr>
	<%end%>
</tbody>
</table>

<br></br>




<%= link_to 'Edit', edit_group_path(@group), class: "btn btn-sm btn-primary" %> |
<%= link_to 'Back', groups_path, class: "btn btn-sm btn-default" %>

</div>
