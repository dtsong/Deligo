<div class="center jumbotron">
  <%= image_tag("newdeligologo.png")%>

<div class="buttons">
  <% if !logged_in? %>
    <%= link_to "Sign up now!", new_user_path, class: "btn btn-lg btn-primary" %>
  <% else %>
  <%if @questions.not_creator(current_user.id) and @questions.not_creator(current_user.id).length > 0 %>
    <%= link_to 'Start Answering Questions', answering_question_path(Question.first_unanswered(current_user.id)), class: "btn btn-lg btn-primary" %>
    <br></br>
  <% end %>
  <%= link_to 'Ask a Question', new_question_path(),class: "btn btn-lg btn-default" %>
  <%= link_to 'My Questions', questions_path({:current_id => current_user.id}) ,class: "btn btn-lg btn-default" %>
<% end %>
</div>
</div>